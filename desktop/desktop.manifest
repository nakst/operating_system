[program]
name = "Desktop";
singleInstance;

[build]
output = "Desktop.esx";
source = "desktop/main.cpp";
installationFolder = "/OS/";

[command commandShutdown]
label = "Shutdown";
callback = CommandShutdown;
dangerous = true;

[command commandRightToLeftLayout]
label = "Enable right-to-left layout";
callback = CommandRightToLeftLayout;
checkable = true;

[window windowControlPanel]
width = 300;
height = 300;
title = "Control Panel";
