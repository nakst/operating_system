[program]
name = "Test Program";

[menu myMenuBar]
subMenu1;
subMenu2;

[menu subMenu1]
name = "SubMenu1";
osMenuTextboxContext;
osMenuTextboxContext;

[menu subMenu2]
name = "SubMenu2";
actionToggleEnabled;

[command actionOK]
label = "Open Program...";
callback = Crash;
isDisabled = false;

[command actionToggleEnabled]
label = "Toggle Enabled";
shortcut = "Ctrl+T";
checkable = true;
callback = ToggleEnabled;
isDisabled = false;
defaultCheck = true;

[command r1]
label = "R1";
radio = "RadioGroup";

[command r2]
label = "R2";
radio = "RadioGroup";
defaultCheck = true;

[command r3]
label = "R3";
radio = "RadioGroup";

[command commandDeleteEverything]
label = "Delete Everything";
dangerous = true;
callback = DeleteEverythingButtonPressed;

[command commandLaunchCalculator]
label = "Calculator";
callback = Launch;
callbackArgument = "Calculator";

[command commandLaunchFileManager]
label = "File Manager";
callback = Launch;
callbackArgument = "File Manager";

[menu menuPrograms]
commandLaunchCalculator;
commandLaunchFileManager;

[build]
output = "Test.esx";
source = "api/test.cpp";
installationFolder = "/OS/";

[window windowTest2]
width = 200;
height = 200;
minimumWidth = 50;
minimumHeight = 50;
title = "Window Test 2";

[command sendRemoteCommand]
label = "Send remote command";
callback = SendRemoteCommand;
